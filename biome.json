{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "**",
            "!**/src/index.css",
            "!**/dist",
            "!**/.content-collections"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "tab"
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 2,
            "lineEnding": "lf",
            "lineWidth": 80,
            "attributePosition": "auto",
            "bracketSpacing": true,
            "quoteStyle": "single"
        }
    },
    "json": {
        "formatter": {
            "indentWidth": 4
        }
    },
    "css": {
        "parser": {
            "tailwindDirectives": true
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "extends": ["ultracite/core", "ultracite/react", "ultracite/remix"]
}
